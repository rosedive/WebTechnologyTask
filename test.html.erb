​
    <% result = connection.exec("select date, weight, give_for from crops
     where not give_for='‘自家消費';") %>
    <% date = [] %>
    
    <% result.each do |record| %>
      <%  date << "Size of bitter gourd: #{record ["weight"]} Sold to: #{record ["give_for"]}" %>
    <% end %>
